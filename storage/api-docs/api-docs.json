{
    "openapi": "3.0.0",
    "info": {
        "title": "Authors",
        "version": "1"
    },
    "paths": {
        "/api/author/{id}": {
            "get": {
                "tags": [
                    "author"
                ],
                "summary": "Find author by ID",
                "description": "Returns a single author",
                "operationId": "d4fb0358eb484f36f719ae61f5d589bb",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID of author to return",
                        "required": true,
                        "schema": {
                            "type": "integer",
                            "format": "int64"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Operation completed",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "status": {
                                            "type": "integer",
                                            "example": "2"
                                        },
                                        "message": {
                                            "type": "string",
                                            "example": "Author with id 3 retrieved"
                                        },
                                        "payload": {
                                            "$ref": "#/components/schemas/Author"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/author/login": {
            "put": {
                "tags": [
                    "login"
                ],
                "summary": "Performs login attempt and retrieves access token if success",
                "operationId": "c9b880bd175fd6021527e4ccd55798fd",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "email": {
                                        "type": "string"
                                    },
                                    "password": {
                                        "type": "string"
                                    }
                                },
                                "type": "object"
                            },
                            "example": {
                                "email": "winona78@example.net",
                                "password": "password"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Operation completed",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "status": {
                                            "type": "integer",
                                            "example": "2"
                                        },
                                        "message": {
                                            "type": "string",
                                            "example": "Login success"
                                        },
                                        "payload": {
                                            "type": "string",
                                            "example": "1|gXppSgPS7E2UMGF8jsMGJuM7FM5MSYH2BAfmmSsT"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "Author": {
                "title": "Author",
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": "3"
                    },
                    "name": {
                        "type": "string",
                        "example": "Great Author"
                    },
                    "email": {
                        "type": "string",
                        "example": "great@author.au"
                    }
                },
                "type": "object"
            }
        }
    }
}